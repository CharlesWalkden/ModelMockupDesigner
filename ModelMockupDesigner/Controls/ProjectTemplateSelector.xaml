<UserControl x:Class="ModelMockupDesigner.Controls.ProjectTemplateSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelMockupDesigner.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <CheckBox  x:Name="FullAntenatal" Checked="Checkbox_Checked" Unchecked="Checkbox_Unchecked" Margin="0,0,4,0"/>
            <TextBlock Text="Full Antenatal" Margin="0,0,4,0" Foreground="White"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <CheckBox  x:Name="IntrapartumOnly" Checked="Checkbox_Checked" Unchecked="Checkbox_Unchecked" Margin="0,0,4,0"/>
            <TextBlock Text="Intraoartum Only" Margin="0,0,4,0" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>

