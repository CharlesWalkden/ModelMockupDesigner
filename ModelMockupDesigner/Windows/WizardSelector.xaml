<UserControl x:Class="ModelMockupDesigner.WizardSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelMockupDesigner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource EditorLightGrayBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Border BorderBrush="White" BorderThickness="2" Width="200" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <!-- Display list of saved wizard designed. -->
                    </Grid>
                    <Grid Grid.Row="1">
                        <!-- Create or delete current selected wizard. -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Button Content="Create"  Width="50" Height="25" Margin="15" />
                            <Button Content="Delete"  Width="50" Height="25" Margin="15" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Border BorderBrush="White" BorderThickness="2" Margin="0,10,10,10">
                <Grid>
                    <!-- Display wizard preview -->
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
