<UserControl x:Class="ModelMockupDesigner.WizardPreview.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelMockupDesigner.WizardPreview"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="clockContainer" Grid.Column="2" Padding="20,5,10,5" BorderBrush="#FF637A94" BorderThickness="2,2,0,0" CornerRadius="15,0,0,15" SnapsToDevicePixels="True" Background="#FFF2F4F7">
        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="k2clock" FontWeight="Bold" FontSize="20" Text="09:17:32" VerticalAlignment="Center" Margin="-5,-1,0,0" Width="80"></TextBlock>
            <TextBlock x:Name="dateLabel" FontWeight="SemiBold" FontSize="16" Text="30-Sep-2016" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
        </WrapPanel>
    </Border>
</UserControl>
